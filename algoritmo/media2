n1 = float(input("Adicione a primeira nota do aluno: "))
n2 = float(input("Adicione a segunda nota do aluno: "))
n3 = float(input("Adicione a terceira nota do aluno: "))

media = ( n1 + n2 + n3 ) / 3

if media >= 7.0 and media <= 10.0:
    print(f"O aluno foi aprovado com média: {media}pts")
elif media <= 6.0 :
    print(f"O aluno foi reprovado com média: {media}pts")
elif media > 10 :
    print(" ! Isso ultrapassa a média escolar atual ! ")